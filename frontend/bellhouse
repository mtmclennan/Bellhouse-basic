# Bellhouse Excavating - Nginx reverse proxy (secure baseline)

server {
    listen 80;
    listen [::]:80;

    server_name bellhouseexcavating.ca www.bellhouseexcavating.ca;

    # Let Certbot validate + force HTTPS
    location /.well-known/acme-challenge/ { root /var/www/html; }

    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;

    server_name bellhouseexcavating.ca www.bellhouseexcavating.ca;

    # --- TLS (managed by Certbot) ---
    ssl_certificate     /etc/letsencrypt/live/bellhouseexcavating.ca/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/bellhouseexcavating.ca/privkey.pem;
    include             /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam         /etc/letsencrypt/ssl-dhparams.pem;

    # --- Security Headers ---
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    add_header Permissions-Policy "geolocation=(), microphone=(), camera=()" always;

    # HSTS (6 months). Do NOT add "preload" unless you're 100% sure.
    add_header Strict-Transport-Security "max-age=15552000; includeSubDomains" always;

    # CSP (Next.js-friendly) + Google Analytics allowed
add_header Content-Security-Policy "default-src 'self';
  script-src 'self' 'unsafe-inline' 'unsafe-eval'
    https://www.googletagmanager.com
    https://www.google-analytics.com
    https://www.google.com
    https://www.gstatic.com
    https://static.cloudflareinsights.com
    https://googleads.g.doubleclick.net;
  style-src 'self' 'unsafe-inline';
  img-src 'self' data: https: https://www.google-analytics.com https://www.googletagmanager.com;
  font-src 'self' data:;
  connect-src 'self' https: https://www.google-analytics.com https://www.googletagmanager.com https://www.google.com https://www.gstatic.com https://static.cloudflareinsights.com;
  frame-src 'self' https://www.google.com https://www.googletagmanager.com;
  frame-ancestors 'self';
  base-uri 'self';
  form-action 'self';" always;

    # Optional: reduce info leakage
    server_tokens off;

    # --- Reverse Proxy to Next.js ---
    location / {
        # Rate limit (requires limit_req_zone in /etc/nginx/nginx.conf)
        limit_req zone=general burst=20 nodelay;

        proxy_pass http://127.0.0.1:8000;
        proxy_http_version 1.1;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Websocket / upgrade support
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        # Timeouts (safe defaults)
        proxy_read_timeout 60s;
        proxy_send_timeout 60s;
    }
}
